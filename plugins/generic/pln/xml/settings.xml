<plugin_settings>
	<!-- if the plugin is enabled -->
	<setting type="bool">
		<name>enabled</name>
		<value>false</value>
	</setting>
	<!-- unique journal uuid -->
	<setting type="string">
		<name>journal_uuid</name>
		<value></value>
	</setting>
	<!-- checksum type (see constants in Deposit) -->
	<setting type="string">
		<name>checksum_type</name>
		<value>SHA-1</value>
	</setting>
	<!-- article or issue-based depositing (see constants in DepositObject) -->
	<setting type="string">
		<name>object_type</name>
		<value>Issue</value>
	</setting>
	<!-- in the case of articles, the article threshold per deposit -->
	<setting type="int">
		<name>object_threshold</name>
		<value>20</value>
	</setting>
	<!-- is the PLN accepting deposits -->
	<setting type="bool">
		<name>pln_accepting</name>
		<value>false</value>
	</setting>
</plugin_settings>