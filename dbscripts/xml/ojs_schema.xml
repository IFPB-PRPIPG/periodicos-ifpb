	<!--
	  *
	  * TABLE published_articles
	  *
	  -->
	<table name="published_articles">
		<field name="published_article_id" type="I8">
			<KEY />
			<AUTOINCREMENT/>
		</field>
		<field name="article_id" type="I8">
			<NOTNULL/>
		</field>
		<field name="issue_id" type="I8">
			<NOTNULL/>
